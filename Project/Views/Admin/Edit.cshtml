@model Product
@{
    Layout = "_AdminLayout";
}

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <label asp-for="Name">Название:</label>
        <input asp-for="Name" />
        <label asp-for="Description">Описание</label>
        <input asp-for="Description" />
        <label asp-for="Category">Категория</label>
        <select asp-for="Category">
            <option value="Бургеры">Бургеры</option>
            <option value="Пицца">Пицца</option>
            <option value="Роллы">Роллы</option>
        </select>
        <label asp-for="Price">Цена</label>
        <input asp-for="Price" />
        <button type="submit">Сохранить</button>
        <a asp-action="Index" asp-controller="Admin">Отмена</a>
    </form>
