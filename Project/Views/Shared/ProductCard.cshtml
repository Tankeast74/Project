
@model Product
@{
    ViewData["Title"] = "View";
}

<div class="card">
    <div class="card__img">
        <img class="card__img-item" src="@Model.ImgPath" alt="" />
    </div>
    <div class="card__header">@Model.Name</div>
    <div class="card__description">@Model.Description</div>
    <div class="card__accept-block">
        <div class="card__price"> @Model.Price</div>
        <form id="@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <button type="submit" class="card__button">В корзину</button>
        </form>
    </div>
    
</div>

